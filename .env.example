# ============================================================================
# HUMMINGBOT LINEA AUTOMATION - ENVIRONMENT VARIABLES
# ============================================================================
# ⚠️  SECURITY WARNING: NEVER commit the actual .env file to git!
# ⚠️  This file contains sensitive API keys and private keys
# ⚠️  Copy this to .env and fill in your actual values
# ============================================================================

# ----------------------------------------------------------------------------
# LINEA RPC ENDPOINTS
# ----------------------------------------------------------------------------
# Primary Linea Mainnet RPC (public endpoint)
LINEA_RPC_URL=https://rpc.linea.build

# Backup RPC (use Infura/Alchemy/etc. for redundancy)
LINEA_RPC_BACKUP=https://linea-mainnet.infura.io/v3/YOUR_INFURA_KEY

# WebSocket endpoint for real-time data
LINEA_WEBSOCKET_URL=wss://rpc.linea.build

# Testnet endpoint for development/testing
LINEA_TESTNET_RPC=https://rpc.goerli.linea.build

# ----------------------------------------------------------------------------
# WALLET CONFIGURATION
# ----------------------------------------------------------------------------
# ⚠️  CRITICAL: Never share or commit your private key!
# Trading wallet private key (without 0x prefix)
WALLET_PRIVATE_KEY=your_private_key_here

# Wallet address (public key)
WALLET_ADDRESS=0xYourWalletAddress

# Gas settings for Linea (in gwei)
MAX_GAS_PRICE=50
GAS_BUFFER_PERCENTAGE=10

# ----------------------------------------------------------------------------
# EXCHANGE API KEYS (if using CEX connectors)
# ----------------------------------------------------------------------------
# Binance (if needed for arbitrage)
BINANCE_API_KEY=your_binance_api_key
BINANCE_API_SECRET=your_binance_secret

# Coinbase (if needed)
COINBASE_API_KEY=your_coinbase_key
COINBASE_API_SECRET=your_coinbase_secret

# ----------------------------------------------------------------------------
# TRADING STRATEGY CONFIGURATION
# ----------------------------------------------------------------------------
# Strategy type: pure_market_making, cross_exchange_market_making, liquidity_mining
STRATEGY=pure_market_making

# Trading pairs (comma-separated for multiple pairs)
TRADING_PAIR=RENZO-USDC
# Alternative pairs for Renzo R7:
# TRADING_PAIR=R7-ETH,R7-USDC,RENZO-ETH

# Exchange connector name
EXCHANGE=linea_clob

# Order spread settings (in percentage)
BID_SPREAD=0.5
ASK_SPREAD=0.5

# Order amount (in base asset)
ORDER_AMOUNT=100

# Order levels (number of orders per side)
ORDER_LEVELS=3

# Order refresh time (seconds)
ORDER_REFRESH_TIME=30

# ----------------------------------------------------------------------------
# RISK MANAGEMENT
# ----------------------------------------------------------------------------
# Maximum order age before cancellation (seconds)
MAX_ORDER_AGE=300

# Kill switch: stop trading if portfolio loses X%
KILL_SWITCH_ENABLED=true
KILL_SWITCH_RATE=-10

# Maximum exposure per trade (in USD)
MAX_ORDER_VALUE=10000

# Minimum spread before placing order (to avoid losses)
MIN_PROFITABILITY=0.3

# ----------------------------------------------------------------------------
# INVENTORY MANAGEMENT
# ----------------------------------------------------------------------------
# Target base asset percentage (for inventory skew)
INVENTORY_TARGET_BASE_PCT=50

# Inventory range tolerance
INVENTORY_RANGE_MULTIPLIER=1.5

# ----------------------------------------------------------------------------
# PRICE SOURCE (for accurate pricing)
# ----------------------------------------------------------------------------
# Options: current_market, external_market, custom_api
PRICE_SOURCE_TYPE=external_market

# External price source (e.g., Binance for more liquid markets)
PRICE_SOURCE_EXCHANGE=binance
PRICE_SOURCE_MARKET=ETH-USDT

# ----------------------------------------------------------------------------
# DATABASE CONFIGURATION (Optional: for TimescaleDB)
# ----------------------------------------------------------------------------
POSTGRES_USER=hummingbot
POSTGRES_PASSWORD=changeme_secure_password
POSTGRES_DB=hummingbot_trades
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# ----------------------------------------------------------------------------
# LOGGING AND MONITORING
# ----------------------------------------------------------------------------
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Enable performance metrics
ENABLE_PERFORMANCE_METRICS=true

# Telegram notifications (optional)
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Discord webhook (optional)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK

# ----------------------------------------------------------------------------
# RATE LIMITS
# ----------------------------------------------------------------------------
# API rate limits (requests per second)
API_RATE_LIMIT=10

# WebSocket reconnection settings
WS_RECONNECT_DELAY=5
WS_MAX_RECONNECT_ATTEMPTS=10

# ----------------------------------------------------------------------------
# ADVANCED SETTINGS
# ----------------------------------------------------------------------------
# Enable paper trading mode (no real trades)
PAPER_TRADING_ENABLED=false

# Enable order book depth analysis
ENABLE_ORDER_BOOK_ANALYSIS=true

# Minimum liquidity threshold (USD)
MIN_LIQUIDITY_THRESHOLD=50000

# Slippage tolerance (percentage)
MAX_SLIPPAGE=1.0
